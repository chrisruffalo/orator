<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1"
>
	<display-name>orator</display-name>
	
	<!-- what parts of the application have security constraints -->
	<security-constraint>
		<display-name>orator security constraints</display-name>
		<web-resource-collection>
			<web-resource-name>Application Resources</web-resource-name>
			<url-pattern>/app</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Main Entry Point</web-resource-name>
			<url-pattern>/index.jsp</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Secured REST Services</web-resource-name>
			<url-pattern>/services/secured/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>
	
	<!-- how login/authentication data is collected -->
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/login.jsp?error=true</form-error-page>
		</form-login-config>
	</login-config>
	
	<!-- defined security roles -->
	<security-role>
		<role-name>*</role-name>
	</security-role>
	
	<!-- suuuuuuper long timeouts -->
	<session-config>
  		<session-timeout>2880</session-timeout>    <!-- 2880 minutes is two days  -->
	</session-config>
</web-app>
