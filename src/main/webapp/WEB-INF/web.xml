<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1"
>
	<!-- what file(s) the application should start on -->
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>	
	</welcome-file-list>

	<!-- what parts of the application have security constraints -->
	<security-constraint>
		<display-name>orator security constraints</display-name>
		<web-resource-collection>
			<web-resource-name>Application Resources</web-resource-name>
			<url-pattern>/app</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Main Entry Point</web-resource-name>
			<url-pattern>/main.html</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Secured REST Services</web-resource-name>
			<url-pattern>/services/secured/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>
	
	<!-- how login/authentication data is collected -->
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.html</form-login-page>
			<form-error-page>/login.html?error=1</form-error-page>
		</form-login-config>
	</login-config>
	
	<!-- defined security roles -->
	<security-role>
		<role-name>*</role-name>
	</security-role>
</web-app>
